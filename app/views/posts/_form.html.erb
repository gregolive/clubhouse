<%= simple_form_for(@post, defaults: { required: false }) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Title", input_html: { class: "input" }, wrapper: false, label_html: 
        { class: "label" }, placeholder: "Grab their attention...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body, label: "Content", input_html: { class: "textarea" }, wrapper: false, label_html: 
        { class: "label" }, placeholder: "Now reel them in..." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>