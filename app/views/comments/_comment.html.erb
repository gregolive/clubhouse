<div class="level-left is-mobile">
  <span class="small-gap">
    <strong>u/<%= User.find(comment.user_id).username %></strong>
    <%= comment.body %>
  </span>
</div>
<div class="level-right is-mobile small-gap">
  <small><%= time_ago_in_words(comment.created_at) %> ago</small>
  <% if current_user == @post.user %>
    <%= link_to [comment.post, comment], method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
      <span class="icon"><i class="far fa-trash-alt" aria-hidden="true"></i></span>
    <% end %>
  <% end %>
</div>
