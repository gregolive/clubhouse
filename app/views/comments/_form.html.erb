<%= simple_form_for([ @post, @post.comments.build ], defaults: { required: false }) do |f| %>
  <%= f.error_notification %>
   <%= f.hidden_field :user_id, :value => current_user.id %> 
  <div class="field">
    <div class="control">
      <%= f.input :body, input_html: { class: "input" }, wrapper: false, placeholder: "Say something nice...", label: false %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>